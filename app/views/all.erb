<h1>All ROBOTS</h1>
<a href="/robots/new"><input type="submit" value="Create New Robot"></a>
<a href="/robots/stats"><input type="submit" value="Robot Statistics"></a>

<div class='container'>
  <div class='row'>
  <div class ='col-md-3'>
<% @robots.each do |robot| %>

  <img src="<%= robot.avatar %>" width="50px" height="50px">

    <h3>(<%= robot.id %>) <a href="/robots/<%= robot.id %>"><%= robot.name %></a></h3>

    <a href="/robots/<%= robot.id %>/edit"><input type="submit" value="Edit"></a>

  <form action="/robots/<%= robot.id %>" method ="post">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="Delete">
  </form>

<% end %>
</div>
</div>
</div>
