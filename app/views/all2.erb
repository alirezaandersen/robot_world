<h1>All ROBOTS</h1>

<table>
<% @robots.each do |robot| %>
<tr>
  <img src="<%= robot.avatar %>" width="50px" height="50px">
</tr>
<tr>
  <td>
    <h3>(<%= robot.id %>) <a href="/robots/<%= robot.id %>"><%= robot.name %></a></h3>
  </td>
  <td>
    <a href="/robots/<%= robot.id %>/edit">Edit</a>
  </td>
  </td>
  <td>
  <form action="/robots/<%= robot.id %>" method ="post">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="delete">
  </form>
</td>
</tr>
<% end %>
</table>
